from matplotlib import pyplot as plt
import numpy as np
# Creating dataset
subjects = ['TCS', 'Data Science', 'OS',
        'JAVA', 'PHP', 'Python']
marks = [23, 17, 35, 29, 12, 33]
 # Creating plot
fig = plt.figure(figsize =(10, 7))
plt.pie(marks, labels = subjects)
 # show plot
plt.show()

